{
    "name": "nowip-api",
    "version": "1.0.50",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "dev": "bun run --watch src/index.ts",
        "db:generate": "bun scripts/db-utils && drizzle-kit generate --config=drizzle.config.ts",
        "db:migrate": "bun scripts/db-utils && drizzle-kit migrate --config=drizzle.config.ts",
        "db:push": "bun scripts/db-utils && drizzle-kit push --config=drizzle.config.ts",
        "start": "bun run src/index.ts"
    },
    "dependencies": {
        "@hono/standard-validator": "^0.2.0",
        "@hono/swagger-ui": "^0.5.2",
        "@scalar/hono-api-reference": "^0.9.25",
        "better-dns": "^1.5.0",
        "drizzle-orm": "^0.44.7",
        "drizzle-zod": "^0.8.3",
        "hono": "^4.10.6",
        "hono-openapi": "^1.1.1",
        "zod": "^4.1.13"
    },
    "devDependencies": {
        "bun-types": "latest",
        "drizzle-kit": "^0.31.7"
    },
    "module": "src/index.ts"
}
